<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!
            {% endblock %}
        </title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
            <!-- font awesome -->
            <link
            rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
        {% endblock %}


    </head>
    <body>
        <header>
            <div class="container mt-4">
                <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#000">
                    <div class="position-absolute top-0 start-0" style="color: #ce5c2e;margin-top:20px;margin-left:130px;font-size: x-large">TERRES DU TEMPS
                    </div>
                    <div class="container-fluid">
                        <a class="navbar-brand" href="{{ path('home') }}"><img src="/img/logo_tdt.png" class="img-fluid" alt="logo_terresdutemps" title="terres du temps" style="height:90px"></a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse align-self-end" id="navbarSupportedContent">
                            <ul class="navbar-nav" style="margin-left:120px">
                                <li class="nav-item mx-lg-2">
                                    <a href="{{ path('home') }}" class="nav-link {{ app.request.get('_route') == 'home' ? 'active ' }}">Accueil</a>
                                </li>
                                <li class="nav-item mx-lg-2">
                                    <a href="" class="nav-link {{ app.request.get('_route') in ['actu', 'actuDetails'] ? 'active' }}">Actualités</a>
                                </li>
                                <li class="nav-item mx-lg-2">
                                    <a href="" class="nav-link {{ app.request.get('_route') in ['agenda', 'agendaDetails']  ? 'active ' }}">Agenda</a>
                                </li>
                                <li class="nav-item mx-lg-2">
                                    <a href="" class="nav-link {{ app.request.get('_route') in ['annuaire', 'annuaireDetails'] ? 'active' }}">Annuaire</a>
                                </li>
                                <li class="nav-item mx-lg-2">
                                    <a href="{{ path('contact') }}" class="nav-link {{ app.request.get('_route') == 'contact' ? 'active' }}">Contact</a>
                                </li>
                            </ul>
                            <div class="position-absolute top-50 end-0 translate-middle-y me-3">
                                <a href="{{ path('app_login') }}" type="button" style="background-color: #ce5c2e" class="btn rounded-pill text-white">Se connecter</a>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <main>
            {% block body %}{% endblock %}
        </main>
        <div class="footer-dark">
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-2">
                            <img src="/img/logo_terres_du_temps.png" style="width: 119px;height: 101px; margin-top: -27px; " alt="Terres-du-Temps"/>
                        </div>
                        <div class="col-sm-7">
                            <div class="">
                                <h3 style="text-align: center;">Suivez nous sur les réseaux sociaux</h3>
                            </div>
                            <div class="col item social">
                                <a href="https://fr-fr.facebook.com/terredutemps/">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="#">
                                    <i class="fab fa-youtube"></i>
                                </a>
                                <a href="https://www.instagram.com/terres_du_temps/">
                                    <i class="fab fa-instagram"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <ul>
                                <li><a href="#"><h3>Contact</h3></a></li>
                                <li><a href="#"><h3>Mentions légales</h3></a></li>
                                <li><a href="#"><h3>CGU</h3></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>

            {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
            <!-- jQuery -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
                {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</body></html>
